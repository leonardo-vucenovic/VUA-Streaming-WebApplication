@model AdministrativeModul.ViewModels.VMVideo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />

    <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @ViewBag.GenreName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalSeconds)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalSeconds)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreamingUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreamingUrl)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ImageName
        </dd>

        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            @if (ViewBag.VideoTags != null)
            {
                <div>

                    <ul>
                        @foreach (var tagFullName in ViewBag.VideoTags)
                        {
                            <li>@tagFullName</li>
                        }
                    </ul>
                </div>
            }

        </dd>

    </dl>
</div>
<div>
    <button class="btn btn-success mr-2" onclick="location.href='@Url.Action("Edit", new { id = Model.Id })'">Edit</button>
    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = Model.Id })'">Delete</button>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Video")'">Back to List</button>
</div>
