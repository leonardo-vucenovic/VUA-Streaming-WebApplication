@model PublicModul.ViewModels.VMVideo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <h4>Video</h4>
    <hr />
    <div>
        <iframe width="560" height="315" src=@Model.StreamingUrl title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    <div class="cont-table">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalSeconds)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalSeconds)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StreamingUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StreamingUrl)
            </dd>

            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @ViewBag.GenreName
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                @ViewBag.ImageName
            </dd>
            <dt class="col-sm-2">
                Tags
            </dt>
            <dd class="col-sm-10">
                @if (ViewBag.VideoTags != null)
                {
                    <div>

                        <ul>
                            @foreach (var tagName in ViewBag.VideoTags)
                            {
                                <li>@tagName</li>
                            }
                        </ul>
                    </div>
                }

            </dd>
        </dl>
    </div>
</div>



<div>
    <button class="btn btn-primary btn-create" onclick="location.href='@Url.Action("Video")'">Back to List</button>
</div>